<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 5.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-5.0.dtd">
    
<hibernate-mapping>
	<class name="com.zhongtai.hibernate_demo.po.User" table="zt_user">
		<!-- 调用setId方法 -->		
		<id name="id" type="java.lang.Integer" >
			<generator class="increment"></generator>
		</id>
		<property name="username" type="java.lang.String" ></property>
		<property name="password" type="java.lang.String" ></property>
	</class>
</hibernate-mapping>